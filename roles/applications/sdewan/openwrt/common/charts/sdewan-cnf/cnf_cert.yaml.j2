---

apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: cnf-root-issuer
spec:
  selfSigned: {}

---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: cnf-root-cert
  namespace: cnf
spec:
  commonName: "sdwan"
  duration: 17520h
  isCA: true
  issuerRef:
    kind: ClusterIssuer
    name: cnf-root-issuer
  secretName: cnf-root-cert

---
apiVersion: cert-manager.io/v1
kind: Issuer
metadata:
  name: cnf-default-issuer
  namespace: cnf
spec:
  ca: 
    secretName: cnf-root-cert

---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: cnf-default-cert
  namespace: cnf
spec:
  commonName: "*.cnf.pod.cluster.local"
  duration: 17520h
  isCA: false
  dnsNames:
  - "*.cnf.pod.cluster.local"
  issuerRef:
    kind: Issuer
    name: cnf-default-issuer
  secretName: cnf-default-cert
