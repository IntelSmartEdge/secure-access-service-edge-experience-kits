apiVersion: batch.sdewan.akraino.org/v1alpha1
kind: FirewallDNAT
metadata:
  name: firewalldnat
  namespace: cnf
  labels:
    sdewanPurpose: {{ item.name }}
spec:
  src: {{ i.provider }}
{% if i.network is defined %}
  src_ip: {{ i.network }}
{% endif %}
{% if i.from is defined %}
    src_dip: {{ i.from }}
{% else %}
  src_dip: {{ over_lay_ip }}
{% endif %}
  dest_ip: {{ i.ingress }}
  proto: all
  target: DNAT
{% endif %}
